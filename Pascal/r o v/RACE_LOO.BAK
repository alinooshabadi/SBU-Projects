Procedure Knightrider(x,y,time: integer);
Begin
  textbackground(black);
  Repeat
    slide := 0;
    textcolor(red);
    gotoxy(x,y);
    write('°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°°');
    Begin
      Repeat
        slide := slide + 1;
        textcolor (lightred);
        gotoxy (x + (slide-1) ,y);
        write('°±²±°');
        delay(time);
        gotoxy (x + (slide-1) ,y);
        textcolor(red);
        write('°°°°°');
      Until (keypressed) or (slide = 30);
    End;
    slide := 0;
    Begin
      x := x + 30;
      Repeat
        slide := slide + 1;
        textcolor (lightred);
        gotoxy (x - (slide-1) ,y);
        write('°±²±°');
        delay(time);
        gotoxy (x - (slide-1) ,y);
        textcolor(red);
        write('°°°°°');
      Until (keypressed) or (slide = 30);
      x := x - slide;
    End;
  Until keypressed;
  textbackground(blue);
End;
